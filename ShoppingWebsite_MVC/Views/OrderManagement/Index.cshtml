@model IEnumerable<ShoppingWebsite_MVC.Models.Order>

@{
    ViewBag.Title = "訂單資料";
}

<h2>訂單列表</h2>

@using (Html.BeginForm("SearchByUserName", "OrderManagement"))
{
    @Html.TextBox("UserName",null, new {@class = "btn-info" })
    <input type="submit" value="搜尋" class="btn btn-primary"/>
}


<table class="table">
    <tr>
        <th>
            購買會員
        </th>
        <th>
            收貨人姓名
        </th>
        <th>
            收貨人電話
        </th>
        <th>
            收貨人住址
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.GetUserName()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverAddress)
        </td>
        <td>         
            @Html.ActionLink("商品明細", "Details", new { id=item.Id },
            new {@class = "btn btn-primary"})            
        </td>
    </tr>
}

</table>
