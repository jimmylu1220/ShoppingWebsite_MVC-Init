@model IEnumerable<ShoppingWebsite_MVC.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>我的第一個ASP.NET購物網站</h1>
    <h6><span></span> @Html.ActionLink("關於網站", "About", new { }, new { @class = "btn btn-primary btn-lg" })</h6>
</div>

@if (ViewBag.RegisterMessage != null)
{
    <div class="form-group">
        <div class="col-md-10">
            @ViewBag.RegisterMessage
        </div>
    </div>
}

<div class="row">
    @foreach (var product in this.Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="ProductImg" src="@product.DefaultImageURL" alt="商品圖片" width="200" height="200" />
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    <p>售價: @product.Price</p>
                    <p>庫存: @product.Quantity</p>
                    <p>
                        <a onclick="AddToCart('@product.Id')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">加入購物車</a>
                        @Html.ActionLink("商品資訊", "Details", "Products", new { id = product.Id }, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>
    }
</div>